<h6>Dashboard</h6>
<h3>Welcome {{name}}</h3>
<p>Here is your stories</p>
{{#if stories}}
<table class="straiped">
   <thead> 
      <tr>
        <th>Title</th>
        <th>Created</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
   </thead>
   <tbody>
      <tr>
        {{#each stories}}
          <td>{{title}}</td>
          <td>{{created}}</td>
          <td><span class="dash-status">{{status}}</span></td>
          <td>
            <a href="/stories/edit/{{_id}}" class="btn">Edit</a>
            <a href="/stories/delete/{{_id}}" class="btn">Delete</a>
          </td>
        {{/each}}
      </tr>
   </tbody>
</table>

{{else}}
  <p>You have no stories</p>
{{/if}}
